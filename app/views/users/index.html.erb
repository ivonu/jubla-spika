<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Show</th>
    <th>Edit</th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
      </tr>
  <% end %>
</table>

<%= link_to 'New user', new_user_path %>