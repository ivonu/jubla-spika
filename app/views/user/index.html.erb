<h1>Benutzer</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>E-Mail</th>
    <th>Role</th>
  </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <%= simple_form_for user, url: update_role_path(user), html: { class: 'form-inline' } do |f| %>
                <%= f.input :role, include_blank: false, collection: get_updatable_roles(current_user), label: false, input_html: { class: 'input-sm', onchange: "this.form.submit();" } %>
              <% end %>
            </td>
        </tr>
    <% end %>
  </tbody>
</table>