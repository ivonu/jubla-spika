<h2>Registrierung</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, required: true, autofocus: true, label: 'Vorname' %>
    <%= f.input :last_name, required: true, label: 'Nachname' %>
    <%= f.input :name, required: true, label: 'Spitzname' %>
    <%= f.input :email, required: true %>
    <%= f.input :password, required: true %>
    <%= f.input :password_confirmation, required: true %>
    <input type="checkbox" onclick="check_agb(this);"> Ich habe die <%= link_to agb_path do %>AGB<% end %> gelesen.
  </div>

  <div class="form-actions">
    <%= f.button :submit, disabled: true, :id=> "new_user_submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
