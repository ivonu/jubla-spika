<div class="entry_button_area text-right">

  <div class="btn-group btn-space">
    <button onclick="window.history.back();" type="button" class="btn btn-primary">Zurück</button>
  </div>
  <div class="btn-group btn-space">
    <%= link_to program_path(@program, :format => 'pdf'), class: "btn btn-primary btn-space" do %>
        <span class="glyphicon glyphicon-print"></span> PDF
    <% end %>
  </div>

  <% if @program.id != 0 && program_owner?(@program) %>
      <div class="btn-group btn-space">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          Ändern
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to 'Bearbeiten', edit_program_path(@program) %></li>
          <li><%= link_to 'Löschen', program_path(@program),
                method: :delete,
                data: { confirm: 'Soll dieser Eintrag wirklich gelöscht werden?' } %></li>
        </ul>
      </div>
  <% end %>
  
</div>