
<h2>Einstieg</h2>
<% @plan_start.each do |entry| %>
    <h3><%= link_to  entry.title, entry %></h3>
    <p><%= entry.description.html_safe %></p>
<% end %>

<h2>Hauptteil</h2>
<% @plan_main.each do |entry| %>
    <h3><%= link_to  entry.title, entry %></h3>
    <p><%= entry.description.html_safe %></p>
<% end %>

<h2>Ausstieg</h2>
<% @plan_end.each do |entry| %>
    <h3><%= link_to  entry.title, entry %></h3>
    <p><%= entry.description.html_safe %></p>
<% end %>

<% if not @program.material.empty? %>
  <h2>Material</h2>
  <ul>
    <% @program.material.split(/\r?\n/).each do |t| %>
      <li><%= "#{t}" %></li>
    <% end %>
  </ul>
<% end %>

<% if not @program.remarks.empty? %>
  <h2>Bemerkungen</h2>
    <ul>
      <% @program.remarks.split(/\r?\n/).each do |t| %>
          <li><%= t %></li>
      <% end %>
    </ul>
<% end %>

<% if not @program.preparation.empty? %>
  <h2>Vorbereitungen</h2>
    <ul>
      <% @program.preparation.split(/\r?\n/).each do |t| %>
          <li><%= t %></li>
      <% end %>
    </ul>
<% end %>