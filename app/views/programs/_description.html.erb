<% if not @program.material.empty? %>
  <h2>Material</h2>
  <ul>
    <% @program.material.split(/\r?\n/).each do |t| %>
      <li><%= "#{t}" %></li>
    <% end %>
  </ul>
<% end %>

<% if not @program.remarks.empty? %>
  <h2>Bemerkungen</h2>
    <ul>
      <% @program.remarks.split(/\r?\n/).each do |t| %>
          <li><%= t %></li>
      <% end %>
    </ul>
<% end %>

<% if not @program.preparation.empty? %>
  <h2>Vorbereitungen</h2>
    <ul>
      <% @program.preparation.split(/\r?\n/).each do |t| %>
          <li><%= t %></li>
      <% end %>
    </ul>
<% end %>