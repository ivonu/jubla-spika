<div id="start-carousel" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% @pictures.each_with_index do |picture, i| %>
      <li data-target="#start-carousel" data-slide-to="<%= i %>" <%= if(i == 0) then "class='active'".html_safe end %>></li>
    <% end %>
  </ol>

  <div class="carousel-inner" role="listbox">
    <% @pictures.each_with_index do |picture, i| %>
      <div class="item <%= if(i == 0) then "active" end %>">
        <%= image_tag picture.file.url(:original) %>
      </div>
    <% end %>
  </div>

  <a class="left carousel-control" href="#start-carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Zurück</span>
  </a>
  <a class="right carousel-control" href="#start-carousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Weiter</span>
  </a>
</div>

<div class="jumbotron">
    <div class="row">
      <div class="col-sm-6 text-center button-start-area">
          <%= link_to 'Suchen', entries_path, class: "btn btn-primary btn-xlarge"%><br/>
          Nach einer Idee suchen
      </div>
      <div class="col-sm-6 text-center button-start-area">
          <%= link_to 'Erstellen', new_idea_path, class: "btn btn-primary btn-xlarge"%><br/>
          Selber Einträge erstellen
      </div>
    </div>
</div>

<div class="row">
  <div class="col-sm-8">

    <h1>News</h1>
    <% @news.each do |news| %>
      <h2><%= news.title %></h2>
      <p><%= news.text.html_safe %></p>
      <hr>
    <% end %>
    <%= will_paginate @news, :previous_label => 'Neuer', :next_label => 'Älter'  %>

    <h1>Like us</h1>
    <div class="fb-like" data-href="https://www.facebook.com/spielkatapult.jungwacht.blauring" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>

  </div>

  <div class="col-sm-4">

    <h1>Neueste Gruppenstunden</h1>
    <ul>
      <% @entries.each do |entry| %>
        <li><%= link_to(entry.title, entry_path(entry)) %></li>
      <% end %>
    </ul>

    <h1>Links</h1>
    <ul>
      <% @links.each do |link| %>
        <li><a href="<%= link.url %>" target="_blank"><%= link.title %></a></li>
      <% end %>
    </ul>

    <img class="spika-logo-big" src="<%= image_path('logo_blau.png') %>"/>

  </div>
</div>

<%= render 'structured_data' %>